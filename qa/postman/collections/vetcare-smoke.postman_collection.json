{
  "info": { "name": "VetCare+ Smoke", "_postman_id": "vetcare-smoke", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "GET /ping",
      "request": { "method": "GET", "url": "{{base_url}}/ping" },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('Status 200', ()=>pm.response.to.have.status(200));"] } }]
    },
    {
      "name": "GET /health/db",
      "request": { "method": "GET", "url": "{{base_url}}/health/db" },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test('DB health 200', ()=>pm.response.to.have.status(200));"] } }]
    }
  ]
}
